{
    "compilerOptions": {
      "outDir": "dist",
      "rootDirs": ["src","tests"],
      "target": "es2021",
      "sourceMap": true,
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "src",
      "strict": true,
      "paths": {
          "@/*": ["*"],
          "@/tests/*": ["../tests/*"],
          "@/mocks/*": ["../tests/mocks/*"]
      }
    },
    "include": ["src", "tests", "tests/mocks", "jest.config.js"]
  }
